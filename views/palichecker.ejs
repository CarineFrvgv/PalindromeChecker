<%- include ('partials/header') %>



    <%- include ('partials/navbar') %> 

<section class="main">
    <div class="container">
        
        <div class="mx-auto white-background" style="width: 70%;">
            <!-- check if the sentence if true or false -->
            <div class="col-lg-8 col-md-10 mx-auto" >
                <% if(result == true) { %>
            
                <li class="list-group-item list-group-item-success" style="border-radius: 10px;">"<%= sentence %>" is a palindrome </li>
                <% } %>
                <% if(result == false) { %>
            
                    <li class="list-group-item list-group-item-success" style="border-radius: 10px;">"<%= sentence %>" is not a palindrome </li>
                <% } %>
            </div>

            <form action="/palichecker" method="POST" required>
                <div class="form-group" align="center">
                    <br>
                    <label for="input-pali" class="font-weight-bold">Type in a word, sentence or number to check if it is a palindrome.</label><br>

                    <input type="text" name="sentence" id="input-pali" placeholder="Ex: Madam"class="form-control">
                    
                    <br>
                    
                    <button class="btn" type="submit">check</button>
                    </div>
            </form>
        </div>
    </div>
</section>

